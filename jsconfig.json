{
	"compilerOptions": {
		"module": "es6",
		"target": "es6",
		"baseUrl": "./src/",
		"moduleResolution": "node",
		"paths": {
			"components/*": ["components/*"],
			"constants/*": ["constants/*"],
			"api/*": ["api/*"],
			"redux/*": ["redux/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
